<h1>Lista de Productos</h1>

{{#if products.length}}
  <div class="products-container">
    {{#each products}}
      <div class="product-card" data-id="{{this.id}}">
        <h3>{{this.name}} (ID: {{this.id}})</h3>
        <p>{{this.description}}</p>
        <p>Precio: ${{this.price}}</p>
        <p>Stock: {{this.stock}}</p>
        <p>Categor√≠a: {{this.category}}</p>
        <a href="/products/{{this.id}}" class="btn-detail">Ver Detalle</a>
        <button onclick="addToCart('{{../cartId}}', '{{this.id}}')">Agregar al Carrito</button>
      </div>
    {{/each}}
  </div>
{{else}}
  <p>No hay productos cargados.</p>
{{/if}}

<script src="/js/cart.js"></script>
