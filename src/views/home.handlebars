<h1>Lista de Productos</h1>

{{#if products.length}}
  <div class="products-container">
    {{#each products}}
      <div class="product-card" data-id="{{this.id}}">
        
        <div>
          <h3>{{this.name}}</h3>
          
          <span class="price-tag">${{this.price}} <span>(Stock: {{this.stock}})</span></span>
          
          <p>ID: {{this.id}}</p>
          <p>CategorÃ­a: {{this.category}}</p>
          <p>{{this.description}}</p>
        </div>
        
        <div class="actions-container">
          <a href="/products/{{this.id}}" class="btn-detail">Ver Detalle</a>
          <button onclick="addToCart('{{../cartId}}', '{{this.id}}')">ðŸ›’ Agregar</button>
        </div>
      </div>
    {{/each}}
  </div>
{{else}}
  <p class="no-products">No hay productos cargados.</p>
{{/if}}

<script src="/js/cart.js"></script>