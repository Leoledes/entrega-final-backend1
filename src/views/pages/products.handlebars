<h1>Lista de Productos</h1>

<div class="products-container">
  {{#each products}}
    <div class="product-card">
      <h2>{{this.title}}</h2>
      <p><strong>Precio:</strong> ${{this.price}}</p>
      <p><strong>Categor√≠a:</strong> {{this.category}}</p>
      <p><strong>Stock:</strong> {{this.stock}}</p>
      <a href="/products/{{this._id}}" class="btn-detail">Ver Detalle</a>
      <button onclick="addToCart('{{this._id}}')">Agregar al Carrito</button>
    </div>
  {{/each}}
</div>

<div class="pagination">
  {{#if hasPrevPage}}
    <a href="{{prevLink}}">‚¨ÖÔ∏è Anterior</a>
  {{/if}}

  <span>P√°gina {{page}} de {{totalPages}}</span>

  {{#if hasNextPage}}
    <a href="{{nextLink}}">Siguiente ‚û°Ô∏è</a>
  {{/if}}
</div>

<script>
  async function addToCart(productId) {
    const cartId = "ID_DEL_CARRITO"; // üîπ despu√©s podemos hacerlo din√°mico
    await fetch(`/api/carts/${cartId}/products/${productId}`, {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ quantity: 1 })
    });
    alert("Producto agregado al carrito");
  }
</script>
