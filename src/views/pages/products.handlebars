<h1>Lista de Productos</h1>

{{#if products.length}}
  <div class="products-container">
    {{#each products}}
      <div class="product-card" data-id="{{this.id}}">
        <div class="product-info">
          <h3>{{this.name}}</h3>
          <p class="price-tag">$ {{this.price}} <span>(Stock: {{this.stock}})</span></p>
          <p>Categor√≠a: {{this.category}}</p>
          <p>{{this.description}}</p>
        </div>
        <div class="actions-container">
          <a href="/products/{{this.id}}" class="btn-detail">Ver Detalle</a>
          <button onclick="addToCart('{{../cartId}}', '{{this.id}}')">üõí Agregar</button>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="pagination">
    {{#if hasPrevPage}}
      <a href="{{prevLink}}">‚¨ÖÔ∏è Anterior</a>
    {{/if}}
    <span>P√°gina {{page}} de {{totalPages}}</span>
    {{#if hasNextPage}}
      <a href="{{nextLink}}">Siguiente ‚û°Ô∏è</a>
    {{/if}}
  </div>
{{else}}
  <p>No hay productos cargados.</p>
{{/if}}

<script src="/js/cart.js"></script>
