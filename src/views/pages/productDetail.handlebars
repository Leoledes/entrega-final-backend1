<div class="product-detail-card">
  <h1>{{product.name}}</h1>

  <div class="product-images">
    {{#if product.thumbnails.length}}
      {{#each product.thumbnails}}
        <img src="{{this}}" alt="{{../product.name}}" class="product-img-detail">
      {{/each}}
    {{else}}
      <img src="/images/placeholder.png" alt="Sin imagen" class="product-img-detail">
    {{/if}}
  </div>

  <p class="price"><strong>Precio:</strong> ${{product.price}}</p>
  <p><strong>Descripci√≥n:</strong> {{product.description}}</p>
  <p><strong>Categor√≠a:</strong> {{product.category}}</p>
  <p><strong>Stock:</strong> {{product.stock}}</p>

  <div class="actions-container">
    <button onclick="addToCart('{{cartId}}', '{{product.id}}')">üõí Agregar al Carrito</button>
    <a href="/products">‚¨ÖÔ∏è Volver a Productos</a>
  </div>
</div>

<script src="/js/cart.js"></script>
